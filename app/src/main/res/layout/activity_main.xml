<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F6D58">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:contentDescription="@string/logo_icon"
            android:src="@drawable/pp_patrickk" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/JudulApk"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Login Without Account Button -->
        <Button
            android:id="@+id/btnLoginWithoutAccount"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#000000"
            android:drawableLeft="@drawable/ic_login"
            android:text="@string/masuk_tanpa_login"
            android:textColor="#FFFFFF" />

        <!-- Login with Google Button -->
        <Button
            android:id="@+id/btnLoginWithGoogle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLoginWithoutAccount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_google"
            android:text="@string/masuk_dengan_google"
            android:textColor="#000000" />

        <!-- Login with Email Button -->
        <Button
            android:id="@+id/btnLoginWithEmail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLoginWithGoogle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_email"
            android:text="@string/masuk_dengan_email"
            android:textColor="#000000" />

        <!-- Register Text -->
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLoginWithEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="80dp"
            android:text="@string/belum_punya_akun_daftar"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</ScrollView>
